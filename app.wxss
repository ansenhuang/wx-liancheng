[hidden] {
  display: none !important;
}

/* class */
.g-page {
  font-size: 28rpx;
  line-height: 1.5;
}

.g-text-overflow {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow-x: hidden;
}

.g-loading {
  display: block;
  font-size: 24rpx;
  color: #aaa;
  text-align: center;
}
.g-loading::before {
  content: '';
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  animation: wx-button-loading-animate 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat center;
  background-size: 100%;
  margin-right: 4rpx;
}
.g-loading-more {
  line-height: 60rpx;
  border-top: 1rpx solid #eee;
}

.g-nocontent {
  display: block;
  font-size: 28rpx;
  color: #aaa;
  text-align: center;
  line-height: 80rpx;
}