@import '../star/index.wxss';

.comment-list {
  padding: 10rpx 0;
}

.comment-item {
  display: flex;
  margin: 10rpx 0;
}

.comment-avatar {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-content {
  flex-grow: 1;
  padding-left: 20rpx;
}

.comment-header {
  padding: 10rpx 0;
}

.comment-user {
  display: inline-block;
  margin-right: 20rpx;
}

.comment-footer {
  font-size: 24rpx;
  color: #aaa;
  padding: 10rpx 0;
}

.comment-vote {
  margin-left: 20rpx;
}
.comment-vote::before {
  content: '';
  display: inline-block;
  margin-right: 4rpx;
  width: 24rpx;
  height: 24rpx;
  background: url(data:image/png;base64,) no-repeat center;
  background-size: 100%;
}