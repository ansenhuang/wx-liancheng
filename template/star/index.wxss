.star {
  display: inline-block;
  height: 20rpx;
  background-position: 0 0;
  background-repeat: repeat-x;
  background-size: 20rpx 20rpx;
}

.star-gray {
  position: relative;
  width: 100rpx;
  background-image: url(data:image/png;base64,);
}

.star-full {
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  background-image: url(data:image/png;base64,);
}