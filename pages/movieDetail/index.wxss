@import '../../template/star/index.wxss';
@import '../../template/actor/index.wxss';
@import '../../template/comment/index.wxss';

.image-wrap {
  position: relative;
  text-align: center;
  padding: 50rpx 0;
  font-size: 0;
  overflow: hidden;
}

.image-filter {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 580rpx;
  filter: blur(30rpx);
}

.info-wrap {
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.info-text {
  display: block;
  font-size: 24rpx;
  color: #aaa;
}

.info-text-small {
  display: block;
  font-size: 20rpx;
  color: #aaa;
}

.info-movie {
  flex-grow: 1;
}

.info-movie-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  padding: 10rpx 0;
}

.info-rate {
  flex-shrink: 0;
  width: 150rpx;
  height: 150rpx;
  padding: 10rpx;
  text-align: center;
  box-shadow: 0 0 8rpx #cdcdcd;
}

.info-rate-score {
  display: block;
  font-size: 32rpx;
}

.common-wrap {
  padding: 20rpx;
}

.common-title {
  display: block;
  color: #aaa;
  margin-bottom: 20rpx;
}

.comment-more {
  width: 100%;
}